<head>
  <title>TeamQuery</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">TeamQuery</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><a href="/">Home</a></li>
      <% if current_user %>
      <li><%= link_to "Log out", logout_path, method: "delete" %></li>
      <li><%= link_to "Companies", 'companies' %></li>
      <li><%= link_to "Register Company", 'register_companies' %></li>
      <% else %>
      <li><%= link_to "Login", 'login' %></li>
      <li><%= link_to "Register", 'register' %></li>
      <li><%= link_to "Companies", 'companies' %></li>
      <li><%= link_to "Register Company", 'register_companies' %></li>
      <% end %>
    </ul>
  </div>
</nav>

<%= form_tag "/create_survey" do %>
  <%= text_field_tag "question1", "What is love?" %>
  <%= text_field_tag "question2", "Baby don't hurt me" %>
  <%= text_field_tag "question3", "no mo" %>
  <%= submit_tag "Save" %>
<% end %>
